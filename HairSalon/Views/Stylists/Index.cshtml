@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

@foreach (Stylist stylist in Model)
{
  <h3><a href='/stylists/@stylist.Id'>@stylist.Name</a></h3>
  <h5><ul><li>@stylist.Description</li></ul></h5>
  <h5><ul><li><a href='/stylists/@stylist.Id/clients'>Clients for @stylist.Name</a></li></ul></h5>
  <h5><ul><li><a href='/stylists/@stylist.Id/clients/new'>Add new client for @stylist.Name</a></li></ul></h5>
}

<p><a href='/'>Back home</a></p>